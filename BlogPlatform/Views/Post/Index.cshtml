@model IEnumerable<BlogPlatform.Models.Post>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Blog Posts</title>
</head>
<body>
    <h3>Hobby Posts</h3>

    @foreach (var post in Model.ToList())
    {
        <p>Posted By: @post.Author</p>
        <p>Title: @post.Title</p>
        <p>Body: @post.Body</p>
        // Currently attempting to get CategoryName to work...
        <p>Category: @post.Category.Name</p>
        <p>Published On @post.PublishDate</p>
    }

    <a href="/Home/Index"><button>Return Home</button></a>
</body>
</html>
